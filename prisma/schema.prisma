generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario{
  id String @id @default(uuid())
  //uuid: unique user identification, esto genera automaticamente un Hash, lo cual es m√°s seguro
  nombre String
  email String @unique @db.VarChar(255) //Establecer un limite de letras
  password String
  edad Int
  activo Boolean @default(true)
  publicaciones Publicacion[] 

}

model Publicacion{

  id String @id @default(uuid())
  titulo String
  contenido String
  usuarioEmail String? 
  Usuario Usuario? @relation(fields: [usuarioEmail], references: [email]) 

}

